<%- model_class = Idea -%>
<div class="page-header">
  <h1><%=t '.title', :default => Idea %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:idea_name) %></dt>
      <dd><pre class="prettyprint"><%= @idea.idea_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @idea.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:customer) %></dt>
      <dd><pre class="prettyprint"><%= @idea.customer %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:problem) %></dt>
      <dd><pre class="prettyprint"><%= @idea.problem %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:business_model) %></dt>
      <dd><pre class="prettyprint"><%= @idea.business_model %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:i_have_experience_in_this_field) %></dt>
      <dd><pre class="prettyprint"><%= @idea.i_have_experience_in_this_field %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:i_am_passionate_in_this_field) %></dt>
      <dd><pre class="prettyprint"><%= @idea.i_am_passionate_in_this_field %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:i_have_hobbies_that_are_related_to_this_field) %></dt>
      <dd><pre class="prettyprint"><%= @idea.i_have_hobbies_that_are_related_to_this_field %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:rank) %></dt>
      <dd><pre class="prettyprint"><%= @idea.rank %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:enthusiasm) %></dt>
      <dd><pre class="prettyprint"><%= @idea.enthusiasm %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ideas_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_idea_path(@idea), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              idea_path(@idea),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

