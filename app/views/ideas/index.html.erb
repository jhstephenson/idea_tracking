<h1>Listing ideas</h1>

<table>
  <thead>
    <tr>
      <th>Idea name</th>
      <th>Description</th>
      <th>Customer</th>
      <th>Problem</th>
      <th>Business model</th>
      <th>I have experience in this field</th>
      <th>I am passionate in this field</th>
      <th>I have hobbies that are related to this field</th>
      <th>Rank</th>
      <th>Enthusiasm</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.idea_name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.customer %></td>
        <td><%= idea.problem %></td>
        <td><%= idea.business_model %></td>
        <td><%= idea.i_have_experience_in_this_field %></td>
        <td><%= idea.i_am_passionate_in_this_field %></td>
        <td><%= idea.i_have_hobbies_that_are_related_to_this_field %></td>
        <td><%= idea.rank %></td>
        <td><%= idea.enthusiasm %></td>
        <td><%= idea.user %></td>
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

