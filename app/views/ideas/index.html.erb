<%- model_class = Idea -%>
<div class="page-header">
  <h1><%=t '.title', :default => Idea %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:idea_name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:customer) %></th>
      <th><%= model_class.human_attribute_name(:problem) %></th>
      <th><%= model_class.human_attribute_name(:business_model) %></th>
      <th><%= model_class.human_attribute_name(:i_have_experience_in_this_field) %></th>
      <th><%= model_class.human_attribute_name(:i_am_passionate_in_this_field) %></th>
      <th><%= model_class.human_attribute_name(:i_have_hobbies_that_are_related_to_this_field) %></th>
      <th><%= model_class.human_attribute_name(:rank) %></th>
      <th><%= model_class.human_attribute_name(:enthusiasm) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.id %></td>
        <td><%= idea.idea_name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.customer %></td>
        <td><%= idea.problem %></td>
        <td><%= idea.business_model %></td>
        <td><%= idea.i_have_experience_in_this_field %></td>
        <td><%= idea.i_am_passionate_in_this_field %></td>
        <td><%= idea.i_have_hobbies_that_are_related_to_this_field %></td>
        <td><%= idea.rank %></td>
        <td><%= idea.enthusiasm %></td>
        <td><%=l idea.created_at, format: :long %></td>
        <td>
          <%= link_to idea_path(idea), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to idea_path(idea), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_idea_path,
            :class => 'btn btn-primary' %>
